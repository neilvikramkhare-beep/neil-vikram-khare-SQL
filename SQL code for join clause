CREATE TABLE Sailors (sid INT PRIMARY KEY,sname VARCHAR(255),rating INT, age INT);
CREATE TABLE Boats (bid INT PRIMARY KEY,bname VARCHAR(255),color VARCHAR(255));
CREATE TABLE Reserves (sid INT,bid INT,day DATE,PRIMARY KEY (sid, bid, day),FOREIGN KEY (sid) REFERENCES Sailors(sid), FOREIGN KEY (bid) REFERENCES Boats(bid));
