SELECT S.*FROM Sailors S
JOIN Reserves R ON S.sid = R.sid
WHERE R.bid = 101;
SELECT B.bname
FROM Boats B
JOIN Reserves R ON B.bid = R.bid
JOIN Sailors S ON S.sid = R.sid
WHERE S.sname = 'BOD';
SELECT DISTINCT S.sname, S.age
FROM Sailors S
JOIN Reserves R ON S.sid = R.sid;
(SELECT sid, sname, age, 'Ascending Order' AS SortOrder
 FROM Sailors
 ORDER BY age ASC)
UNION ALL
(SELECT sid, sname, age, 'Descending Order' AS SortOrder
 FROM Sailors
 ORDER BY age DESC);
